<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Progress Indicator -->
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp"
            style="?android:attr/progressBarStyleLarge" />

        <!-- Internet Status with High Contrast -->
        <TextView
            android:id="@+id/textViewInternetStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text="Checking internet..."
            android:layout_marginBottom="16dp"
            android:gravity="center" />


        <!-- 1st Card for Authentication Fields -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/editTextIpAddress"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:hint="Enter IP address "
                    android:textSize="18sp"
                    android:padding="16dp" />

                <EditText
                    android:id="@+id/editTextUsername"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:hint="Enter Username "
                    android:textSize="18sp"
                    android:padding="16dp" />

                <EditText
                    android:id="@+id/editTextpassword"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:hint="Enter Password "
                    android:textSize="18sp"
                    android:padding="16dp"
                    android:inputType="text" />

                <EditText
                    android:id="@+id/editTextPort"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:hint="API Port 8728 "
                    android:textSize="18sp"
                    android:padding="16dp"
                    android:inputType="number" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Login Button with Enhanced Accessibility -->
        <Button
            android:id="@+id/buttonLogin"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:backgroundTint="#4CAF50"
            android:text="Login"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <!-- CardView for aesthetic grouping and accessibility -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/editTextIp"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:hint="Enter IP address (e.g., 8.8.8.8)"
                    android:textSize="18sp"
                    android:padding="16dp"
                    android:importantForAutofill="no"
                    android:autofillHints="none" />

                <Button
                    android:id="@+id/buttonPing"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="Ping"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:backgroundTint="#3F51B5"
                    android:textColor="@android:color/white"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textViewResult"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textStyle="normal"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:text="Result will be displayed here"
                    android:textColor="@color/black"
                    android:padding="12dp"
                    android:background="#03A9F4"
                    android:gravity="center" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <!-- CardView for API Port Validator -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/editTextApiValidationIp"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:hint="Enter IP Address or Domain"
                    android:textSize="18sp"
                    android:padding="16dp" />

                <EditText
                    android:id="@+id/editTextApiValidationPort"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:hint="Enter API Port (e.g. 8728)"
                    android:textSize="18sp"
                    android:padding="16dp"
                    android:inputType="number" />

                <Button
                    android:id="@+id/buttonCheckApiPort"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:backgroundTint="#009688"
                    android:text="Check API Port"
                    android:textColor="@android:color/white"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textViewApiPortResult"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="API Port status will appear here"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:padding="12dp"
                    android:background="#B2DFDB" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>